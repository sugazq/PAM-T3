<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Tombol Browser -->

    <!-- Tombol Toast di sebelah kanan Browser -->

    <!-- Tombol Count di bawah Browser -->

    <Button
        android:id="@+id/button_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="571dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#3DCE0C"
        android:text="@string/button_label_browser" />

    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="20dp"

        android:backgroundTint="#3DCE0C"
        android:text="@string/button_label_toast" />

    <!-- Tombol Switch Page di kanan tombol Count -->

    <!-- TextView angka besar di bawah semua tombol -->

    <Button
        android:id="@+id/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_browser"
        android:layout_alignStart="@id/button_browser"
        android:layout_marginStart="-422dp"
        android:layout_marginTop="-20dp"
        android:backgroundTint="#3DCE0C"
        android:text="@string/button_label_count" />

    <Button
        android:id="@+id/button_switchpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_toast"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-4dp"
        android:layout_toRightOf="@id/button_count"
        android:backgroundTint="#3DCE0C"
        android:text="@string/button_label_pindah" />

    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="120sp"
        android:gravity="center"
        android:background="#FFFF00"
        android:text="@string/count_initial_value"
        android:layout_below="@id/button_count"
        android:layout_marginTop="40dp" />

</RelativeLayout>
